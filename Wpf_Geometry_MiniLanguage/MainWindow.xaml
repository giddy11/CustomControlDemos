<Window x:Class="Wpf_Geometry_MiniLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Geometry_MiniLanguage"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="800">
    <StackPanel>
        <Path Stroke="Blue">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="100 120">
                        <PolyLineSegment Points="200 120 200 220 100 170"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Path Stroke="Red" Data="M 100 120 L 200 120 L 200 220 L 100 170"/>
        <Path Stroke="Blue">
            <Path.Data>
                <PathGeometry Figures="M 100 120 L 200 120 L 200 220 L 100 170"/>
            </Path.Data>
        </Path>
    </StackPanel>
</Window>
